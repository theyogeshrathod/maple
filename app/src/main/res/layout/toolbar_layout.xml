<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/toolbar_back_button"
        android:layout_width="@dimen/base_toolbar_icon_size"
        android:layout_height="@dimen/base_toolbar_icon_size"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:contentDescription="@string/back_button"
        android:src="@mipmap/back"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/toolbar_settings_button"
        android:layout_width="@dimen/base_toolbar_icon_size"
        android:layout_height="@dimen/base_toolbar_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:contentDescription="@string/back_button"
        android:src="@mipmap/settings"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/toolbar_home_button"
        android:layout_width="@dimen/base_toolbar_icon_size"
        android:layout_height="@dimen/base_toolbar_icon_size"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:layout_toStartOf="@id/toolbar_settings_button"
        android:contentDescription="@string/back_button"
        android:src="@drawable/home"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_title"
        style="@style/toolbar_title_style"
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/toolbar_home_button"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/toolbar_margin_start"
        android:layout_toEndOf="@+id/toolbar_back_button"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>