<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="plain_text_style">
        <item name="android:textSize">@dimen/plain_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="header_text_style">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/headerTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="dashboard_text_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="profile_edittext_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin5</item>
    </style>

    <style name="profile_text_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin10</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.Material.Light.TextView.SpinnerItem"/>

</resources>
